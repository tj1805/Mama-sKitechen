<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication
    x:Class="ProjectOne.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converter="clr-namespace:ProjectOne.Converters"
    xmlns:prism="clr-namespace:Prism.DryIoc;assembly=Prism.DryIoc.Forms">


    <Application.Resources>
        <ResourceDictionary>

            <!--  others static resources can be added here eg converters  -->

            <converter:NairaConverter x:Key="CurrencyConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/styles/Colors.xaml" />
                <ResourceDictionary Source="/styles/Fonts.xaml" />
                <ResourceDictionary Source="/styles/CustomTemplate.xaml" />
                <ResourceDictionary Source="/styles/Global.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>




</prism:PrismApplication>