        <Grid Grid.Row="0"  Margin="10"  >
            <Label  Text="Italian" Style="{StaticResource BoldText}" 
                        TextColor="{StaticResource BGcolor}"
                        VerticalOptions="Center" HorizontalOptions="Start"/>
            <Label Text="{x:Static fonts:IconFont.Cart}" 
                         FontFamily="{StaticResource Fonts}"
                       TextColor="{StaticResource BGcolor}"
                       FontSize="20"
                      HorizontalOptions="End"
                       VerticalOptions="Center"/>
        </Grid>

        <CollectionView Grid.Row="1"
            ItemsSource="{Binding Walkthroughs}"
                       >
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                Span="2" HorizontalItemSpacing="10"
                                 VerticalItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                  
                        <yummy:PancakeView
                                                Margin="5,5,5,5"
                                                BackgroundColor="White"
                                                HasShadow="True"
                                                CornerRadius="10"
                                                HeightRequest="150">
                            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HeightRequest="270">
                           
                                <Image Source="{Binding Image}" Aspect="Fill" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                            <Label 
                                HorizontalOptions="End"
                                
                                Text="{x:Static fonts:IconFont.Heart}"
               FontFamily="{StaticResource Fonts}"
               TextColor="{StaticResource BGcolor}"
                    FontSize="20"
                       />

                            <StackLayout Margin="30" VerticalOptions="EndAndExpand">
                                    <Label Text="{Binding Heading}" TextColor="White" FontSize="35" />
                                    <Label Text="{Binding Caption}" TextColor="White" FontSize="15" />
                                </StackLayout>
                           
                        </Grid>
                        </yummy:PancakeView>
                   
                </DataTemplate>
            </CollectionView.ItemTemplate>
