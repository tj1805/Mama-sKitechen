    <yummy:PancakeView  
                            CornerRadius="0,0,60,100"
                            HasShadow="True"
                            Elevation="0"
                            IsClippedToBounds="true" 
                             BackgroundGradientAngle="150"
                            BackgroundGradientStartColor="#010088"
                            BackgroundGradientEndColor="White">

        <Grid>
            <!--<Label Text="Welcome" 
                   Margin="20"
                   VerticalOptions="Start" 
                   HorizontalOptions="Center"
                   TextColor="#010088"
                   Style="{StaticResource BoldText}"/>-->

            <yummy:PancakeView   Margin="20,70,20,20"
                            CornerRadius="60,60,60,100"
                            HasShadow="True"
                            Elevation="20"
                            IsClippedToBounds="true" 
                             BackgroundColor="White"
                                >
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="10" Spacing="30">
                    <Image Source="logoone"  VerticalOptions="Start" TranslationY="-20"/>
                    <Label Text="Welcome to mama Mia's Kitchen" TextColor="#010088" 
                                   HorizontalOptions="Center"
                                   FontFamily="{StaticResource SemiBoldFont}"
                                   />

                    <yummy:PancakeView BackgroundGradientAngle="45" 
                                   HorizontalOptions="FillAndExpand"
                                   HeightRequest="50" CornerRadius="10" 
                                     BackgroundGradientStartColor="#010088"
                            BackgroundGradientEndColor="White" 
                                   BorderColor="#00FF01"
                                   BorderThickness="4">
                        <material:MaterialButton 
                       ButtonType="Text"
                        Command="{Binding SignInCommand}"
                        HorizontalOptions="Center"
                         Style="{StaticResource ButttonStyle}"
                        Text="SignIn"
                        AllCaps="False"
                        VerticalOptions="Center" />
                    </yummy:PancakeView>
                    <yummy:PancakeView BackgroundGradientAngle="45" 
                                   HorizontalOptions="FillAndExpand"
                                   HeightRequest="50" CornerRadius="10" 
                             BackgroundGradientStartColor="#010088"
                            BackgroundGradientEndColor="White"
                                    BorderColor="#00FF01"
                                   BorderThickness="4">
                        <material:MaterialButton 
                        ButtonType="Text"
                        Style="{StaticResource ButttonStyle}"
                       Command="{Binding  SignUpCommand}"
                        HorizontalOptions="Center"
                        Text="SignUp"
                        AllCaps="False"
                        VerticalOptions="Center" />
                    </yummy:PancakeView>



                </StackLayout>

            </yummy:PancakeView>

        </Grid>

    </yummy:PancakeView>


