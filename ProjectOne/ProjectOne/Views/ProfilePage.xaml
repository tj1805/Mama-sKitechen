<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjectOne.Views.ProfilePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fonts="clr-namespace:ProjectOne.Models"
    xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
    xmlns:prism="http://prismlibrary.com"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    prism:ViewModelLocator.AutowireViewModel="True"
    NavigationPage.HasNavigationBar="False">

    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Margin="10"
            RowSpacing="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                HorizontalOptions="Center"
                Style="{StaticResource BoldText}"
                Text="User's Profile"
                TextColor="{StaticResource BGcolor}"
                VerticalOptions="Center" />

            <Label
                FontFamily="{StaticResource Fonts}"
                FontSize="40"
                HorizontalOptions="End"
                Text="{x:Static fonts:IconFont.AccountEdit}"
                TextColor="{StaticResource BGcolor}"
                VerticalOptions="Center" />

            <yummy:PancakeView
                Grid.Row="1"
                BorderColor="{StaticResource BGcolor}"
                BorderThickness="5"
                CornerRadius="150"
                HeightRequest="250"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="250">
                <yummy:PancakeView.GestureRecognizers>
                    <!--<TapGestureRecognizer Command="{Binding ProfileChanged}" />-->
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </yummy:PancakeView.GestureRecognizers>
                <Grid>
                    <Image
                        x:Name="ProfileImage"
                        Aspect="AspectFill"
                        Source="profileone" />

                </Grid>

            </yummy:PancakeView>

            <StackLayout
                Grid.Row="2"
                Padding="15"
                Spacing="20">
                <Grid ColumnSpacing="10" HeightRequest="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <yummy:PancakeView
                        Grid.Column="0"
                        BackgroundColor="AliceBlue"
                        CornerRadius="20"
                        HeightRequest="50">
                        <Label
                            Margin="10,0,0,0"
                            HorizontalOptions="Start"
                            Style="{StaticResource SemiBoldText}"
                            Text="Jane"
                            TextColor="{StaticResource BGcolor}"
                            VerticalOptions="Center" />
                    </yummy:PancakeView>

                    <yummy:PancakeView
                        Grid.Column="1"
                        BackgroundColor="AliceBlue"
                        CornerRadius="20"
                        HeightRequest="50">
                        <Label
                            Margin="10,0,0,0"
                            HorizontalOptions="Start"
                            Style="{StaticResource SemiBoldText}"
                            Text="West"
                            TextColor="{StaticResource BGcolor}"
                            VerticalOptions="Center" />
                    </yummy:PancakeView>
                </Grid>
                <yummy:PancakeView
                    BackgroundColor="AliceBlue"
                    CornerRadius="20"
                    HeightRequest="50">
                    <Label
                        Margin="10,0,0,0"
                        HorizontalOptions="Start"
                        Style="{StaticResource SemiBoldText}"
                        Text="5 west street lagos "
                        TextColor="{StaticResource BGcolor}"
                        VerticalOptions="Center" />
                </yummy:PancakeView>
                <yummy:PancakeView
                    BackgroundColor="AliceBlue"
                    CornerRadius="20"
                    HeightRequest="50">
                    <Label
                        Margin="10,0,0,0"
                        HorizontalOptions="Start"
                        Style="{StaticResource SemiBoldText}"
                        Text="08120759252"
                        TextColor="{StaticResource BGcolor}"
                        VerticalOptions="Center" />
                </yummy:PancakeView>

            </StackLayout>


            <yummy:PancakeView
                Grid.Row="3"
                Margin="0,0,0,0"
                BackgroundColor="{StaticResource WhiteColor}"
                BorderColor="{StaticResource BGcolor}"
                BorderThickness="5"
                CornerRadius="80"
                HeightRequest="80"
                HorizontalOptions="Start"
                VerticalOptions="End"
                WidthRequest="90">
                <yummy:PancakeView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SignOutCommand}" />
                </yummy:PancakeView.GestureRecognizers>
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label
                        FontFamily="{StaticResource Fonts}"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="{x:Static fonts:IconFont.Logout}"
                        TextColor="Red" />
                    <Label
                        FontSize="14"
                        HorizontalOptions="Center"
                        Text="Sign Out"
                        TextColor="Red" />
                </StackLayout>
            </yummy:PancakeView>

            <!--<yummy:PancakeView
                Grid.Row="3"
                Margin="0,0,0,0"
                BackgroundColor="{StaticResource BGcolor}"
                BorderColor="Firebrick"
                BorderThickness="5"
                CornerRadius="80"
                HeightRequest="80"
                HorizontalOptions="End"
                VerticalOptions="End"
                WidthRequest="90">
                <yummy:PancakeView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ContactUsClick}" />
                </yummy:PancakeView.GestureRecognizers>
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label
                        FontFamily="{StaticResource Fonts}"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="{x:Static fonts:IconFont.Phone}"
                        TextColor="Red" />
                    <Label
                        FontSize="14"
                        HorizontalOptions="Center"
                        Text="Contact Us"
                        TextColor="{StaticResource Greencolor}" />
                </StackLayout>
            </yummy:PancakeView>-->
            <yummy:PancakeView
                Grid.Row="3"
                BackgroundColor="White"
                BorderColor="{StaticResource BGcolor}"
                BorderThickness="4"
                CornerRadius="40"
                HorizontalOptions="End"
                VerticalOptions="End"
                WidthRequest="100">

                <Expander Rotation="180">

                    <Expander.Header>
                        <Label
                            Margin="0,0,0,20"
                            FontFamily="{StaticResource Fonts}"
                            FontSize="20"
                            HeightRequest="50"
                            HorizontalOptions="CenterAndExpand"
                            Rotation="180"
                            Text="{x:Static fonts:IconFont.Phone}"
                            TextColor="{StaticResource BGcolor}"
                            VerticalOptions="End"
                            WidthRequest="20" />

                    </Expander.Header>
                    <StackLayout Margin="10">
                        <yummy:PancakeView
                            BackgroundColor="White"
                            BorderColor="{StaticResource BGcolor}"
                            BorderThickness="4"
                            CornerRadius="40"
                            HeightRequest="50">
                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                <Label
                                    HorizontalOptions="Center"
                                    Rotation="180"
                                    Style="{StaticResource SemiBoldTextSubtitle}"
                                    Text="Call Us"
                                    TextColor="{StaticResource BGcolor}">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding CallCommand}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                        </yummy:PancakeView>
                        <yummy:PancakeView
                            BackgroundColor="White"
                            BorderColor="{StaticResource BGcolor}"
                            BorderThickness="4"
                            CornerRadius="40"
                            HeightRequest="50"
                            WidthRequest="50">
                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                <Label
                                    HorizontalOptions="Center"
                                    Rotation="180"
                                    Style="{StaticResource SemiBoldTextSubtitle}"
                                    Text="Store"
                                    TextColor="{StaticResource BGcolor}">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding OpenMapPlaceMarkCommand}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                        </yummy:PancakeView>


                    </StackLayout>
                </Expander>

            </yummy:PancakeView>

            <!--</Grid>-->
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <BoxView
                Grid.ColumnSpan="3"
                BackgroundColor="{StaticResource BGcolor}"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand" />
            <yummy:PancakeView Grid.Column="0">
                <yummy:PancakeView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding HomeCommand}" />
                </yummy:PancakeView.GestureRecognizers>
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label
                        FontFamily="{StaticResource Fonts}"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="{x:Static fonts:IconFont.Home}"
                        TextColor="White" />

                    <Label
                        FontSize="14"
                        HorizontalOptions="Center"
                        Text="Home"
                        TextColor="White" />
                </StackLayout>
            </yummy:PancakeView>

            <yummy:PancakeView
                Grid.Column="1"
                Margin="0,-30,0,0"
                BackgroundColor="{StaticResource BGcolor}"
                BorderColor="White"
                BorderThickness="10"
                CornerRadius="100,100,100,100"
                HeightRequest="100"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="100">
                <yummy:PancakeView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding FavoriteCommand}" />
                </yummy:PancakeView.GestureRecognizers>
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label
                        FontFamily="{StaticResource Fonts}"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="{x:Static fonts:IconFont.Heart}"
                        TextColor="Red" />
                    <Label
                        FontSize="14"
                        HorizontalOptions="Center"
                        Text="Favorite"
                        TextColor="White" />
                </StackLayout>
            </yummy:PancakeView>


            <yummy:PancakeView Grid.Column="2">

                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label
                        FontFamily="{StaticResource Fonts}"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="{x:Static fonts:IconFont.Account}"
                        TextColor="{StaticResource Greencolor}" />
                    <Label
                        FontSize="14"
                        HorizontalOptions="Center"
                        Text="Profile"
                        TextColor="{StaticResource Greencolor}" />
                </StackLayout>
            </yummy:PancakeView>


        </Grid>

    </Grid>
</ContentPage> 